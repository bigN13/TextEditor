<orchestra:DocumentView x:Class="Orchestra.Modules.TextEditorModule.Views.PropertiesView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:catel="http://catel.codeplex.com"
                        xmlns:orchestra="http://orchestra.codeplex.com"
                        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                        >
    
    <!-- Content -->
    <catel:StackGrid>
        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </catel:StackGrid.RowDefinitions>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0">
            <TextBlock Text="Url" />
            <TextBlock Text="{Binding Url}" />
            <TextBlock Text="Document Map" />
            <ListView Name="PresetList"  
                      ItemsSource="{Binding MethodSignatureCollection}" 
                      SelectedItem="{Binding SelectectedDocumentItem}"
                      DisplayMemberPath="currentMatch"
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <catel:EventToCommand 
                    Command="{Binding Path=DataContext.DocMapSelectedCommand, 
                                        RelativeSource={RelativeSource FindAncestor, AncestorType=catel:UserControl, AncestorLevel=1}}" 
                        CommandParameter="{Binding Path=SelectedItem, ElementName=PresetList}" 
                        DisableAssociatedObjectOnCannotExecute="False" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListView>

        </StackPanel>
    </catel:StackGrid>
</orchestra:DocumentView>
